<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdjustSettingsActivity">

    <LinearLayout
        android:id="@+id/adjSettingsLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ECEED8"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical">

        <Button
            android:id="@+id/bSetMaxTurns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:layout_marginStart="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10sp"
            android:background="#7E3A2C1B"
            android:fontFamily="casual"
            android:lineSpacingExtra="30sp"
            android:padding="15sp"
            android:paddingStart="15sp"
            android:paddingLeft="15sp"
            android:paddingTop="15sp"
            android:paddingEnd="15sp"
            android:paddingRight="15sp"
            android:paddingBottom="15sp"
            android:text="Set Maximum Turns"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bSetLetterPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:layout_marginStart="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10sp"
            android:background="#7E3A2C1B"
            android:fontFamily="casual"
            android:padding="15sp"
            android:paddingStart="15sp"
            android:paddingLeft="15sp"
            android:paddingTop="15sp"
            android:paddingEnd="15sp"
            android:paddingRight="15sp"
            android:paddingBottom="15sp"
            android:text="Adjust Letter Pool"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>