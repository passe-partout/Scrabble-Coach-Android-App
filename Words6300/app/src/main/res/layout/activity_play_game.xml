<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayGameActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ECEED8"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-75dp"
        tools:layout_editor_absoluteY="37dp">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40sp"
            android:stretchColumns="*">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tScore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:fontFamily="casual"
                    android:padding="3dip"
                    android:paddingStart="0sp"
                    android:paddingLeft="0sp"
                    android:paddingTop="30sp"
                    android:paddingEnd="30sp"
                    android:paddingRight="0sp"
                    android:paddingBottom="400sp"
                    android:text="Score: "
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tTurns"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="casual"
                    android:gravity="right"
                    android:padding="3dip"
                    android:paddingStart="0sp"
                    android:paddingLeft="0sp"
                    android:paddingTop="30sp"
                    android:paddingEnd="30sp"
                    android:paddingRight="0sp"
                    android:paddingBottom="400sp"
                    android:text="Turns: "
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </TableRow>

        </TableLayout>

        <LinearLayout
            android:id="@+id/BoardLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="50sp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/board_letter1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#7E3A2C1B"
                android:fontFamily="casual"
                android:textStyle="bold" />

            <Button
                android:id="@+id/board_letter2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#7E3A2C1B"
                android:fontFamily="casual"
                android:textStyle="bold" />

            <Button
                android:id="@+id/board_letter3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#7E3A2C1B"
                android:fontFamily="casual"
                android:textStyle="bold" />

            <Button
                android:id="@+id/board_letter4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#7E3A2C1B"
                android:fontFamily="casual"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/RackLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50sp"
            android:layout_marginBottom="50sp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/rack_letter1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#7E3A2C1B"
                android:fontFamily="casual"
                android:textStyle="bold" />

            <Button
                android:id="@+id/rack_letter2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#7E3A2C1B"
                android:fontFamily="casual"
                android:textStyle="bold" />

            <Button
                android:id="@+id/rack_letter3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#7E3A2C1B"
                android:fontFamily="casual"
                android:textStyle="bold" />

            <Button
                android:id="@+id/rack_letter4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#7E3A2C1B"
                android:fontFamily="casual"
                android:textStyle="bold" />

            <Button
                android:id="@+id/rack_letter5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#7E3A2C1B"
                android:fontFamily="casual"
                android:textStyle="bold" />

            <Button
                android:id="@+id/rack_letter6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#7E3A2C1B"
                android:fontFamily="casual"
                android:textStyle="bold" />

            <Button
                android:id="@+id/rack_letter7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#7E3A2C1B"
                android:fontFamily="casual"
                android:textStyle="bold" />

        </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lblEnterWord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Enter Word: " />

                <EditText
                    android:id="@+id/tEntry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Enter Word Here"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:inputType="textPersonName" />

            </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bSwap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:background="#7E3A2C1B"
                android:fontFamily="casual"
                android:text="Swap"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/bSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:background="#7E3A2C1B"
                android:fontFamily="casual"
                android:text="Submit"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>